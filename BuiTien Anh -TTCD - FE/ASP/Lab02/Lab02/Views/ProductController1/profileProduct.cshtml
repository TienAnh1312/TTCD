@{
    ViewData["Title"] = "ProfileProduct";
    var product = ViewBag.products;
}
<h2>Chi tiết sản phẩm</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@product.Avatar" alt="" style="width:100%" />
    </div>
    <div class="col-md-8 productprof">
        <h3>Sản phẩm: @product.Name</h3>
        <h3>Giá: @product.Price</h3>
        <h3>Mô tả: <br /> <span style="font-size:1.2rem">@product.Bio</span></h3>
        <h3>Trạng thái: @product.Status</h3>
        <h3>Ngày đăng: @product.Birthday</h3>
        <p>
            <a asp-asp-controller="Product" asp-action="Index" class="btn btn-sm btn-danger">Về danh sách</a>
        </p>
    </div>
</div>