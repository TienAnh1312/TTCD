@model IEnumerable<Lab4_2.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<table>
<tbody>
        <div class="d-flex flex-wrap">
            @foreach (var item in Model)
            {
                <div class="product">
                    <div class="product-box">
                        <div class="product-img">
                            <div class="product-item">
                                <img src="@item.Image" alt="@item.Name" />

                               <div>
                                    <h3 style="padding: .5rem 0;margin: auto;font-size: .8rem;">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </h3>
                               </div>
                                <p><span>Giá: @Html.DisplayFor(modelItem => item.Price)</span></p>
                                
                                @* <p><span>Trạng thái: @Html.DisplayFor(modelItem => item.Status)</span></p>
                                <p><span>Ngày cập nhập: @Html.DisplayFor(modelItem => item.CreatedDate)</span></p>
                                <p><span>Danh mục: @Html.DisplayFor(modelItem => item.CategoryId)</span></p>
                                <p><span>Giới thiệu: @Html.DisplayFor(modelItem => item.Description)</span></p>*@
                                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.Id /* id=item.PrimaryKey */ }, new{@class = "btn btn-success"})
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </tbody>
</table>
