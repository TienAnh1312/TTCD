@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@* @model Lab09_CartPay.Models.Customer *@
@{
    ViewData["Title"] = "Login infomation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    form{
        border:1px solid #ccc;
        borde-radius:5px;
        background:#ccc;
        padding:1rem;
    }
</style>
@{
    if(HttpContextAccessor.HttpContext.Session.GetString("Member") != null){
        <div class="row">
            <h2 class="text-center my-2 py2">Welcome to, @ViewBag.Customer.Name </h2>
        </div>
    }else
    {
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center my-2 py-2">LOGIN INFOMATION</h2>
                <form asp-action="Login" asp-controller="CustomerMember" method="post">
                    <div class="mb-3">
                        <label for="UserOrEmail" class="form-lable">Email/UserName</label>
                        <input type="text" class="form-control" id="UserOrEmail" name="UserOrEmail"
                            placeholder="name@example.com / username"
                            value="buitienanh@gmail.com"/>
                    </div>
                    <div>
                        <label for="password" class="form-lable">PassWord</label>
                        <input type="password" class="form-control" id="password" name="password" value="123456"/>
                    </div>
                    
                    <input type="hidden" name="urlAction" value="@ViewBag.UrlAction"/>
                    <button type ="submit" class="btn btn-primary btn-block">Sign in</button>
                    <span style="color:red">@TempData["errorLogin"]</span>
                </form>
            </div>
            <div class="col-md-6">
                <h2 class="text-center my-2 py-2">REGISTRATION INFOMATION</h2>
                <form asp-action="Registy" asp-controller="CustomerMember" method="post">
                    <div class="mb-3">
                        <label for="Name" class="form-lable">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="FullName..."/>
                    </div>
                    <div class="mb-3">
                        <label for="USERNAME" class="form-label">UserName</label>
                        <input type="text" class="form-control" id="USERNAME" name="USERNAME" placeholder="UserName..."/>
                    </div>
                    <div class="mb-3">
                        <label for="EMAIL" class="form-label">Email</label>
                        <input type="email" class="form-control" id="EMAIL" name="EMAIL" placeholder="name@example.com" />
                    </div>
                    <div class="mb-3">
                        <label for="PASSWORD" class="form-label">Password</label>
                        <input type="password" class="form-control" id="PASSWORD" name="PASSWORD" />
                    </div>
                    <button asp-action="Registry" type="submit" class="btn btn-success btn-block">Registry</button>
                    <span style="color:red">@TempData["errorRegistry"]</span>
                </form>
            </div>
        </div>
    }
}

